modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Discord Bot (Stopped)"

[[workflows.workflow]]
name = "Discord Bot (Stopped)"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """
# Bot stopped by user. Run this to start: python bot_replit.py
exit 0"""

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["python3", "bot_replit.py"]
